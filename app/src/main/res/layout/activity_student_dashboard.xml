<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <!-- Toolbar for ActionBar with white background -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Student Dashboard"
        android:background="#FFFFFF"
    android:elevation="4dp"/>

    <!-- Button to View Clubs -->
    <Button
        android:id="@+id/viewClubsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_clubs"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <!-- Button to View Favorites -->
    <Button
        android:id="@+id/viewFavoritesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_favorites"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <!-- Button for Leader Panel (Initially hidden) -->
    <Button
        android:id="@+id/leaderPanelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/leader_panel"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <!-- RecyclerView for listing clubs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clubsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
