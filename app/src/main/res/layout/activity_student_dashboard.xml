<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <!-- Toolbar for the activity header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Student Clubs"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Button to View Clubs (if needed, or adjust the text and action accordingly) -->
    <Button
        android:id="@+id/viewClubsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_clubs"
        android:textSize="18sp"
        android:visibility="visible"
        android:layout_marginBottom="20dp" />

    <!-- Button for Leader Panel (can be made visible based on user role) -->
    <Button
        android:id="@+id/leaderPanelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/leader_panel"
        android:textSize="18sp"
        android:visibility="gone"
    android:layout_marginBottom="20dp" />

    <!-- RecyclerView to display clubs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clubsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    android:layout_marginTop="16dp" />

</LinearLayout>
